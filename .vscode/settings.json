{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": false,
    "source.fixAll.eslint": true, // this allows ESLint to auto fix on save
    "source.organizeImports": false
  },
  "editor.linkedEditing": true,
  "[markdown]": {
    "files.trimTrailingWhitespace": false
  },
  "cSpell.words": [
    "antfu",
    "Attributify",
    "Commitizen",
    "Cpath",
    "Csvg",
    "dimm",
    "iconify",
    "nuxt",
    "nuxtjs",
    "Pinia",
    "Prefixs",
    "twemoji",
    "unocss",
    "vitepress",
    "vitesse",
    "vuepress",
    "vueuse"
  ]
}
