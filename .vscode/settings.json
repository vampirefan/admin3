{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": false,
    "source.fixAll.eslint": true, // this allows ESLint to auto fix on save
    "source.organizeImports": false
  },
  "[markdown]": {
    "files.trimTrailingWhitespace": false
  },
  "cSpell.words": [
    "antfu",
    "Attributify",
    "Commitizen",
    "iconify",
    "nuxt",
    "nuxtjs",
    "Pinia",
    "twemoji",
    "unocss",
    "vitesse"
  ]
}
