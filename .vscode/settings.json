{
  // ========== FileNesting Config ==========
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "README.md": "backup.sh, deploy.sh, index.html, LICENSE, *.md",
    "nuxt.config.ts": "*config.ts, *config.json, .env.*",
    "package.json": ".gitignore, yarn.lock, *config.js"
  },
  // ========== ESlint Config ==========
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "never"
  },
  "eslint.validate": [
    "javascript",
    "typescript",
    "vue",
    "html",
    "markdown",
    "json",
    "jsonc",
    "yaml"
  ],
  // ========== cSpell Config ==========
  "cSpell.words": [
    "antfu",
    "Attributify",
    "bumpp",
    "cascader",
    "Commitizen",
    "Cpath",
    "Csvg",
    "datav",
    "dimm",
    "docus",
    "Gitee",
    "iconify",
    "Jian",
    "keyid",
    "nuxt",
    "nuxtjs",
    "octocat",
    "ofetch",
    "pinceau",
    "Pinia",
    "Prefixs",
    "primevue",
    "shiki",
    "shimo",
    "sortablejs",
    "ssjson",
    "tada",
    "taze",
    "tiktok",
    "tinymce",
    "todos",
    "twemoji",
    "uncategorized",
    "unocss",
    "unstorage",
    "vitepress",
    "vitesse",
    "vuepress",
    "vueuse",
    "Vuex",
    "Zhongsong"
  ]
}
